proveedor: "ZUCCA"
aliases: ["FORMAGGIARTE"]
anchors:
  fecha:
    find: ["Fecha", "FECHA"]
    direction: "right"
regex: '''\1'
  numero_factura:
    find: ["DOCUMENTO NÚMERO", "DOCUMENTO NUMERO"]
    direction: "right"
regex: '''\1'
  lineas:
    find: ["ARTÍCULO", "DESCRIPCIÓN", "CANTIDAD", "PRECIO", "UNIDAD", "SUBTOTAL", "DTO.", "TOTAL"]
    region: "lines"
rules:
  - NormalizarTextos
  - UnicaLineaPorProducto
  - RepartirPortes       # “Envio Frio” → repartir proporcionalmente y eliminar la línea
  - IgnorarLineasAlbaran
descripcion:
  mode: "original"        # dejamos el texto de producto
  fija: null
iva_default: 4            # puede ser 0 si fecha < 2025; se respetará el que figure
grouping: lineas
portes:
  mode: "prorratear"
precedence:
  force_pattern_over_dictionary: false
